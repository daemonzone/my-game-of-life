<section class="text-center m-5">
    <h1 class="text-center" >Welcome To The Conway Game of Life</h1>
    <p>Please, upload your first generation to start playing</p>
    
    <% if current_user %>
        <h5><%= current_user.email %></h5>
    <%end%>

    <%=
        link_to_if(current_user.nil?, "Login", sign_in_path, class: 'btn btn-primary m-5') do
            link_to('Sign out',  destroy_user_session_path, :method => 'delete', class: 'btn btn-danger m-5')
        end
    %>

</section>

<section class="text-center">
    <%= form_tag({:controller => "game", :action => "import", :method => "post"}, :multipart => true) do %>
        <%= file_field_tag 'import_file' %>
        <%= submit_tag "Carica", class: "btn btn-primary" %>
    <% end %>
</section>